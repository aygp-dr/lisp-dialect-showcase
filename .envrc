#!/usr/bin/env bash
# Project environment configuration for lisp-dialect-showcase

# Project metadata
export PROJECT_NAME="lisp-dialect-showcase"
export PROJECT_ROOT="$(pwd)"

# Export for use in Makefile and scripts
export LISP_PROJECT_NAME="${PROJECT_NAME}"
export LISP_PROJECT_ROOT="${PROJECT_ROOT}"

# Emacs configuration for this project
export EMACS_PROJECT_FILE="${PROJECT_ROOT}/${PROJECT_NAME}.el"

# Tmux session name
export TMUX_SESSION_NAME="${PROJECT_NAME}"

# Add local bin to PATH for project-specific tools
PATH_add "${PROJECT_ROOT}/bin"

# Source local environment if it exists
if [ -f .envrc.local ]; then
  source_env .envrc.local
fi